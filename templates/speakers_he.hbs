<!DOCTYPE html>
<html lang="he">
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

  <meta name="description" content="{{event.name_he}}">
  <meta name="author" content="{{event.organizer_name}}">

  <title>{{event.name_he}}</title>

  <!-- Bootstrap core CSS -->
  <!-- Latest compiled and minified CSS -->
  {{> fonts}}
  <link rel="stylesheet" href="assets/css/bootstrap.min.css">
  <link rel="stylesheet" href="assets/css/schedule_he.css">
  <link rel="manifest" href="manifest.json">
  <link rel="apple-touch-icon" href="assets/img/icon.png"/>

  {{> analytics}}

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->
</head>
<body dir="rtl">
  <a id="top"></a>
  {{> navbar_he}}

<div class="main container">
  <div class="row">
    <div class="middle col-sm-12">
      <h2 class="filter-heading track-heading text-center">
      <span>
        מרצים
      </span>
      </h2>
    </div>
  </div>

  <div class="search-row container">
    <div class="search">
      <span class="filter search-filter search-filter-speakers">
        <label><i class="fa fa-search" aria-hidden="true"></i></label>
        <input class="search-filter-input" type="text" placeholder="חיפוש">
      </span>
    </div>
  </div>

  <div class="row">
  {{#each speakersList_he}}
    {{#if has_data}}
    <div class="speaker-inline col-xs-12 col-sm-6 col-md-4 col-rtl">
      <a class="anchor" id="{{id}}"></a>
      <div class="speaker-container">
        <p class="speaker-image" data-toggle="collapse" data-target="#desc-{{id}}">
        {{#if photo}}
        <img onError="this.onerror=null;this.src='assets/img/avatar.png';"  class="speaker-photo" alt="{{{name_he}}}" src="speakers/{{{photo}}}"/>
        {{else}}
        <img class="background-image" alt="{{{name_he}}}" src="assets/img/avatar.png"/>
        {{/if}}
        </p>
        <p class="speaker-name">{{{name_he}}}</p>
        <div id="desc-{{id}}" class="collapse">
          {{#if short_biography_he}}
          <p class="speaker-bio">
            <i>{{{short_biography_he}}}</i>
          </p>
          {{/if}}
          {{#if long_biography_he}}
              {{#each long_biography_he}}
            <p class="speaker-bio">{{{this}}}</p>
              {{/each}}
          {{/if}}
          <hr class="speaker-hr">
          <div class="speaker-container">
            <h4 class="speaker-title" class="text"><strong>יחידות</strong></h4>
            <div class="row">
              <div class="col-xs-12 col-md-12">
                {{#each sessions}}
                {{#unless is_cancelled}}
                <h5>
                  <strong>
                  {{date_he}}
                  </strong>
                </h5>
                <p class="speaker-location"><i style="color:{{{location_color}}}" class="fa fa-map-marker-alt" aria-hidden="true"></i>&nbsp;<i>{{location_he}}</i></p>
                <a href="schedule_he.html#{{session_id}}">
                  <h4 style="background-color:{{{color}}}"  class="speaker-event">
                    <span class="time-track">{{start}} - {{end}}&nbsp;&bull;&nbsp;</span><br />
                    {{{title_he}}}
                  </h4>
                </a>
                {{/unless}}
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/if}}
    {{/each}}
  </div>
  </div>
</div>

  {{> footer}}

  <a class="scroll" href="#" id="down-button" data-scroll-direction="0">
    <i class="fa fa-chevron-up" aria-hidden="true"></i>
  </a>
  <script src="assets/js/scroll.js" type="text/javascript"></script>

  <script type="text/javascript">
    $(document).ready(function() {
      let hash = window.location.hash.substr(1);
      if (hash) {
          $("#desc-" + hash).collapse('toggle');
      }

      function display() {
        let filterVal = '';
        $('.search-filter-input').each(function() {
          if($(this).is(':visible')) {
            filterVal = $(this).val();
          }
        });
        $('.speaker-inline').each(function() {
            let showSpeaker = false;
            let speakerName = $(this).find('.speaker-name');

            if (speakerName.text().toUpperCase().indexOf(filterVal.toUpperCase()) >= 0) {
              showSpeaker = true;
            };
            $(this).toggleClass('hide', !showSpeaker);
        });

        $('#no-results').remove();
        if ($('.speaker-inline:visible').length == 0) {
          const message = (filterVal) ? 'לא נמצאו תוצאות לחיפוש' : 'אין סימניות';
          $('.search-row').after("<p style = 'padding-left: 15px; margin-top: 15px; font-weight: bold; color: red; text-align: center;' id='no-results'>"+message+"</p>");
        }
      }

      $('.search-filter-input').change(function() {
        display();
      }).keyup(function() {
        $(this).change();
      });

    });
  </script>

</body>
</html>
