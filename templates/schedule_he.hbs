<!DOCTYPE html>
<html lang="he">
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

  <meta name="description" content="{{event.name_he}}">
  <meta name="author" content="{{event.organizer_name}}">

  <title>{{event.name_he}}</title>

  <!-- Bootstrap core CSS -->
  <!-- Latest compiled and minified CSS -->
  {{> fonts}}
  <link rel="stylesheet" href="assets/css/bootstrap.min.css">
  <link rel="stylesheet" href="assets/css/schedule_he.css">
  <link rel="manifest" href="manifest.json">
  <link rel="apple-touch-icon" href="assets/img/icon.png"/>

  {{> analytics}}

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->
</head>

<body dir="rtl">
  <a id="top"></a>
  {{> navbar_he}}

  <div class="main container" id="session-list">
    <div class="row">
      <div class="middle col-sm-12">
        <h2 class="filter-heading track-heading text-center">
        <span>
          תוכנית
        </span>
        </h2>
      </div>
    </div>

    <div class="date-list container">
      <div class="tabs">
        <span class="tabs-nav">
          <a href="#" class="all tabs-nav-link date-button is-active"> כל הימים </a>
          {{#each timeList}}
          <a href="#" class="{{slug}} tabs-nav-link date-button"> {{date_short_he}} </a>
          {{/each}}
        </span>
      </div>

      <div class="search">
        <span class="filter search-filter search-filter-schedule">
          <label><i class="fa fa-search" aria-hidden="true"></i></label>
          <input class="search-filter-input" type="text" placeholder="חיפוש">
        </span>
        <span class="filter show-button-filter">
          <button class="btn btn-default bookmark-toggle" id="starred"><i class="fa fa-star" aria-hidden="true"></i></button>
        </span>      
      </div>

      <div class="track-legend">
        <div class="track-legend-toggle" data-toggle="collapse" href="#collapseTracks">
          <a>מה אומרים הצבעים?&nbsp;&nbsp;<i class="fa fa-chevron-down"></i></a>
        </div>
        <div class="track-legend-list collapse" id="collapseTracks">
        {{#each tracks}}
        {{#if name}}
          <span class="track-legend-item">
            <i style="background-color:{{{color}}}" class="track-legend-color"></i>&nbsp;{{name_he}}
          </span>
        {{/if}}
        {{/each}}
        </div>
      </div>
    </div>

    <div class="row">
      <div style="margin: 15px 0 0 5px;" class="col-md-9 col-rtl">
        <div class="track-list container">

          {{#each timeList}}
          <div class="{{slug}} day-filter">
            <div style="padding:0" class="col-md-12">
              <a class="anchor" id="{{slug}}"></a>
              <h4 class="text">{{date_he}}</h4>
            </div>
            {{#each times}}

            <div class="row time-filter">
              <div class="eventtime col-xs-2 col-sm-2 col-md-2 col-rtl">
                <h4>{{caption}}</h4>
              </div>
              <div class="tracks col-xs-10 col-sm-10 col-md-10 col-rtl">
                {{#each sessions}}
                {{#unless is_cancelled}}
                <div class="track-inline">
                  <a class="anchor" id="{{session_id}}"></a>
                  <div style="padding-right:0px;" class="schedule-container">
                    <div id="title-{{session_id}}" class="sizeevent event" style="background-color:{{{color}}}"
                      data-toggle="collapse" data-target="#desc-{{session_id}}, #desc2-{{session_id}}">
                      <h4>{{title_he}}</h4>
                      <a id="bookmark-{{session_id}}" class="bookmark">
                        <i class="fa fa-star" aria-hidden="true"></i>
                      </a>
                      <div id="desc2-{{session_id}}" class="collapse in">
                        <div class="row speaker-short-info">
                          <h5>
                          {{#each speakers_list}}
                            {{name_he}}{{#unless last}},{{/unless}}
                          {{/each}}
                          </h5>
                          <h6>
                          {{#if language_he}}
                          <i class="fa fa-globe" aria-hidden="true"></i>&nbsp;{{language_he}}
                          {{/if}}
                          {{#if location_he}}
                          {{#if language_he}}&nbsp;&nbsp;&nbsp;{{/if}}<i class="fa fa-map-marker-alt" aria-hidden="true"></i>&nbsp;<i>{{location_he}}</i>
                          {{/if}}
                          {{#if shabbat}}
                          &nbsp;&nbsp;&nbsp;<i class="fa fa-menorah" aria-hidden="true"></i>&nbsp;שומר שבת
                          {{/if}}
                          {{#if recommend}}
                          &nbsp;&nbsp;&nbsp;<i class="fa fa-book-reader" aria-hidden="true"></i>
                          {{/if}}
                          </h6>
                        </div>
                      </div>
                    </div>
                    <div id="desc-{{session_id}}" class="collapse">
                      <p class="compact"><i style="color:{{{color}}}" class="fa fa-circle" aria-hidden="true"></i>&nbsp;{{tracktitle_he}}</p>
                      {{#if language_he}}
                      <p class="compact"><i class="fa fa-globe" aria-hidden="true"></i>&nbsp;{{language_he}}</p>
                      {{/if}}
                      {{#if location_he}}
                      {{#if location_color}}
                      <p class="compact"><i style="color:{{{location_color}}}" class="fa fa-map-marker-alt" aria-hidden="true"></i>&nbsp;<i>{{location_he}}</i></p>
                      {{else}}
                      <p class="compact"><i class="fa fa-map-marker-alt" aria-hidden="true"></i>&nbsp;<i>{{location_he}}</i></p>
                      {{/if}}
                      {{/if}}
                      {{#if shabbat}}
                      <p class="compact"><i class="fa fa-menorah" aria-hidden="true"></i>&nbsp;שומר שבת</p>
                      {{/if}}
                      {{#if recommend}}
                      <p class="compact"><i class="fa fa-book-reader" aria-hidden="true"></i>&nbsp;&quot;בבל&quot; ממליץ</p>
                      {{/if}}
                      <p><i class="fa fa-clock" aria-hidden="true"></i>&nbsp;{{sessiondate_he}}, <span>{{start}} - {{end}}</span></p>
                      <hr class="clear-both">
                      {{#if description_he}}
                        {{#each description_he}}
                      <p class="compact">{{{this}}}</p>
                        {{/each}}
                      <hr class="clear-both">
                      {{/if}}
                      <div class="session-speakers-list">
                        {{#each speakers_list}}
                          {{#if has_data}}
                        <a href="speakers_he.html#{{id}}">
                          {{/if}}
                          {{#if photo}}
                            <p class="session-speakers"><img onError="this.onerror=null;this.src='assets/img/avatar.png';" class="card-img-top speaker-image-small" src="speakers/thumbs/{{{photo}}}"/></p>
                          {{else}}
                            <p class="session-speakers"><img class="card-img-top speaker-image-small" src="assets/img/avatar.png"/></p>
                          {{/if}}
                          <p><span class="graytext">{{name_he}}</span></p>
                          {{#if has_data}}
                        </a>
                          {{/if}}
                        {{#if organisation_he}}
                        <p>{{organisation_he}}</p>
                        {{/if}}
                        {{#if short_biography_he}}
                        <p><i>{{{short_biography_he}}}</i></p>
                        {{/if}}
                        {{#if long_biography_he}}
                          {{#each long_biography_he}}
                        <p class="compact">{{{this}}}</p>
                          {{/each}}
                        {{/if}}
                        <hr class="clear-both">
                        {{/each}}
                      </div>
                    </div>
                  </div>
                </div>
                {{/unless}}
                {{/each}}
              </div>
            </div>
            {{/each}}
          </div>
          {{/each}}

        </div>
      </div>
      <div class="track-names">
      {{#each tracks}}
      {{#if name_he}}
        <ul class="title-inline title-legend">
          <li  style="background-color:{{{color}}}" class="titlecolor"></li>
          <li>{{name_he}}</li>
        </ul>
      {{/if}}
      {{/each}}
      </div>
    </div>
  </div>

  {{> footer_he}}

  <a class="scroll" href="#" id="down-button" data-scroll-direction="0">
    <i class="fa fa-chevron-up" aria-hidden="true"></i>
  </a>
  <script src="assets/js/scroll.js" type="text/javascript"></script>

  <a class="now" href="#" id="now-button" data-scroll-direction="0">
    <i class="fa fa-clock" aria-hidden="true"></i>
  </a>
  <script src="assets/js/scroll_now.js" type="text/javascript"></script>

  <script type="text/javascript">
    var favorite=false;
    $(document).ready(function() {
      $('.bookmark').click(function(e){
        var temp = JSON.parse(localStorage["{{event.name}}"]);
        var id = Number($(this).attr('id').substring(9));
        var curColor = $(this).css("color");
        if (curColor == "rgb(255, 255, 0)") {
          $(this).css("color", "rgb(127, 127, 127)");
          temp[id] = 0;
        }
        else {
          $(this).css("color", "rgb(255, 255, 0)");
          temp[id] = 1;
        }
        localStorage["{{event.name}}"] = JSON.stringify(temp);

        e.stopPropagation();
      });

      function initPage() {
        if(localStorage.hasOwnProperty("{{event.name}}") === false) {
          localStorage["{{event.name}}"] = '{}';
        }

        var temp = JSON.parse(localStorage["{{event.name}}"]);
        Object.keys(temp).forEach(function(key) {
          if (temp[key] == 1) {
            $('#bookmark-' + key).css("color", "rgb(255, 255, 0)");
          }
        });

        let hash = window.location.hash.substr(1);
        if (hash) {
          $("#desc2-" + hash).collapse('toggle');
          $("#desc-" + hash).collapse('toggle');
        }
      }
      initPage();

      function display() {
        let temp = JSON.parse(localStorage["{{event.name}}"]);
        let filterVal = '';
        $('.search-filter-input').each(function() {
          if($(this).is(':visible')) {
            filterVal = $(this).val();
          }
        });      
        $('.day-filter').each(function() {
            let showDate = false;
            $(this).find('.time-filter').each(function() {
                let showTime = false;
                $(this).find('.track-inline').each(function() {
                  let showSession = false;
                  let event = $(this).find('.event');
                  let id = Number(event.attr('id').substring(6));
                  if (event.text().toUpperCase().indexOf(filterVal.toUpperCase()) >= 0) {
                    if (favorite && temp[id] != 1) {
                        showSession = false;
                    } else {
                        showSession = true;
                    }
                  } else {
                    showSession = false;
                  }
                  $(this).toggleClass('hide', !showSession);
                  if (showSession) {
                    $(this).show();
                    showTime = true;
                  } else {
                    $(this).hide();
                  }
                });
                if (showTime) {
                  $(this).show();
                  showDate = true;
                } else {
                  $(this).hide();
                }
            });
            if (showDate) {
                $(this).show(); 
            }
            else {
                $(this).hide();
            }
        });
        
        $('#no-results').remove();
        $('.track-names').show();
        if ($('.track-inline:visible').length == 0) {
          const message = (filterVal) ? 'לא נמצאו תוצאות לחיפוש' : 'אין סימניות';
          $('.date-list').after("<p style = 'padding-left: 15px; margin-top: 15px; font-weight: bold; color: red; text-align: center;' id='no-results'>"+message+"</p>");
          $('.track-names').hide();
        }
      }

      function getCurrentDate() {
        var className = '';
        $('.date-button').each(function() {
          if($(this).hasClass('is-active')) {
            className = $(this).attr('class').split(' ')[0];
          }
        });
        return className;
      }
      $('.date-button').click(function() {
        let date = $(this).attr('class').split(' ')[0];
        $(this).addClass('is-active');
        $(this).siblings().removeClass('is-active');
        $('.day-filter').each(function () {
          const showThing = date === 'all' || $(this).hasClass(date);
          $(this).toggleClass('hide', !showThing);
        });
        display();
      });

      $('#starred').click(function(event){
        favorite = !favorite;
        if (!favorite) {
          $(this).removeClass('is-active');
        }
        else {
          $(this).addClass('is-active');
        }
        display();
      });
      
      $('.search-filter-input').change(function() {
        display();
      }).keyup(function() {
        $(this).change();
      });

      $('.track-legend-toggle').click(function() {
        $(".track-legend-toggle .fa-chevron-down").toggleClass("rotate180");
      });
    });
  </script>

</body>
</html>
